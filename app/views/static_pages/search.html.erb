<div class="col-md-3">
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center">Lọc Tìm Kiếm</h3>
      <span class="finter-date">Ngày đăng</span>
      <div>
        <ul>
          <li><input type="checkbox" name=""> Hôm nay</li>
          <li><input type="checkbox" name=""> Tuần này</li>
          <li><input type="checkbox" name=""> Tháng này</li>
        </ul>
      </div>
       <span class="finter-date">Người Đăng</span>
      <div>
        <ul>
          <li><input type="checkbox" name=""> Bạn</li>
          <li><input type="checkbox" name=""> Bạn của bạn</li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="col-md-8">
  <div class="row">
    <div class="col-md-12">
      <div class="section-title">
        <h2>Có <%= @results.size %> kết quả cho từ khóa "<%= @parameter%>" </h2>
      </div>
    </div>
    <!-- post -->
    <% if !@results.empty? %>
      <% @results.each do |result| %>
        <div class="col-md-12">
          <div class="post post-row">
            <a href="#"><img class="post-img" alt="blog-post.html" src="/assets/5030401_cover_Xiaomi_Redmi_10X_tinhte-481141e096ce79f4291a4d2fc9fdd29ca4c964ce5aaf37b0aa1b2c478281229b.jpg"></a>
            <div class="post-body">
              <div class="post-meta">
                <a class="post-category cat-2" href="#"><%=result.topic.name%></a>
                <span class="post-date"><%=result.created_at%></span>
              </div>
              <h3 class="post-title"><a href="blog-post.html"><%=result.title%></a></h3>
              <p><%=result.about%></p>
            </div>
          </div>
        </div>
      <%end%>
   <%= will_paginate @results %>
    <%end%>
    <!-- /post -->
  </div>
</div>


