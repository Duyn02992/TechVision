<div class="container">
 <% @bookmarks.each do |bookmark| %>
<div>
  <b>Bookmarks:</b><br>
  <span><%= bookmark.user.name %></span><br>
  <b>Title:</b>
  <span><%= link_to bookmark.review.title, review_path(bookmark.review.id) %></span>
</div>
<div>
  <%= link_to t("index.Delete"), [bookmark.review, bookmark], method: :delete, data: { confirm: t("index.You sure?") }, class: "btn btn-danger" %>
</div>
<br>

<% end %>
</div>