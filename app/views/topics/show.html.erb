<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="section-title">
        <h2><%= t("index.Have") %> <%= @reviews.count %> <%= t("index.reviews") %> <%= @topic.name %> 
        </h2>
      </div>
    </div>
    <!-- post -->
    <% if !@reviews.empty? %>
      <% @reviews.each do |review| %>
        <div class="col-md-12">
          <div class="col-md-12">
            <div class="post post-row">
              <%= link_to image_tag(review.image, class: "post-img"),review_path(review) if review.image.attached? %>
              <div class="post-body">
                <div class="post-meta">
                  <%=link_to review.name,review_path(review) %>
                  <span class="post-date"><%= time_ago_in_words(review.created_at) %><%= t("index.ago") %></span>
                </div>
                <h3 class="post-title">
                  <%= link_to review.title ,review_path(review) %>
                </h3>
                <p><%=review.about%></p>
                <div class="aside-widget">
                  <div class="tags-widget">
                    <ul>
                      <% review.hashtag_details.each do |hashtag_detail| %>
                        <li><%=link_to hashtag_detail.hashtag.name, hashtag_path(hashtag_detail) %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
   <div class="col-md-12 center"><%= will_paginate @reviews %></div>
  </div>
</div>
