<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
	<section class="user_info">
    <h1>
		  <%= gravatar_for @user %>
		  <%= @user.name %>
	  </h1><br>
    <%= link_to (t ".New Review"), new_review_path, class: "btn btn-primary" %><br>
    <% if current_user.admin? %>
      <%= link_to "Revise", admin_revises_path, class: "btn btn-primary" %><br>
    <% end %>
	</section>
  </aside>
</div>
