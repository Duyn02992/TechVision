<div id="post-header" class="page-header">
  <div class="background-img" style="background-image: url('/assets/about-1.jpg')";></div>
    <div class="container">
      <div class="row">
        <div class="col-md-10">
          <div class="post-meta">
            <%=link_to @review.topic.name, "#", class: "post-category cat-2" %>
            <span class="post-date"><%= @review.created_at %></span>
          </div>
          <h1><%= @review.title.html_safe %></h1>
        </div>
      </div>
    </div>
  </div>
  <div class="section">
      <!-- container -->
    <div class="container">
        <!-- row -->
      <div class="row">
          <!-- Post content -->
        <div class="col-md-8">
          <% if logged_in? %>
            <% if @bookmarked.nil? %>
              <div id="bookmark_form">
                <%= render "reviews/bookmark_form" %>
              </div>
              <% else %>
              <div id="bookmarked_form">
                <%= render "reviews/bookmarked_form" %>
              </div>
            <% end %>
          <% end %>
          <div class="section-row sticky-container">
            <div class="main-post">
              <figure class="figure-img">
                <%= image_tag @review.image,
                 class: "img-responsive" if @review.image.attached? %>
              </figure>
              <%= @review.content.html_safe %>
              <section class="stats">
                <p id = "form_like"><%= render 'form_like' %></p>
                <span>
                  <p id = "like_count">
                    <%= @review.likes.count %>
                    <%= (@review.likes.count) == 1 ? 'Like' : 'Likes'%>
                  </p>
                </span>
                <% if logged_in? %>
                  <div>
                    <% if @review.user_id == current_user.id %>
                      <%= link_to (t ".Edit Review"), edit_review_path(@review),
                                        class: "btn btn-primary css-edit" %><br>
                      <%= link_to (t ".Delete"), @review,method: :delete,
                                  data: { confirm: t("index.You sure?") },
                                                  class: "btn btn-danger" %><br>
                    <% else current_user.admin? %>
                      <%= link_to (t ".Delete"), @review, method: :delete,
                                  data: { confirm: t("index.You sure?") },
                                                      class: "btn btn-danger" %>
                    <% end %>
                  </div>
                <% end %>
                <div
                  class="fb-share-button"
                  data-href="<%= review_url(@review.id) %>"
                  data-layout="box_count" data-size="small">
                  <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Flocalhost%3A3000%2Freviews%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Share</a>
                </div><br><br>
                <div id="comments">
                  <%= render "comments/comments" %>
                </div>
              </section>
              <div class="aside-widget">
                <div class="tags-widget">
                  <ul>
                    <% if !@hashtags.empty? %>
                      <% @hashtags.each do |hashtag| %>
                        <li><%=link_to hashtag.name, hashtag_path(hashtag) %></li>
                      <% end %>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="aside-widget">
            <div class="section-title">
              <h2><%= t("index.bailienquan") %></h2>
            </div>
            <% if !@reviewFilter.nil? %>
              <%  @reviewFilter.each do |review| %>
                <div class="post post-widget">
                  <%= link_to image_tag(review.image, class: "post-img"),review_path(review) if review.image.attached? %>
                  <div class="post-body">
                    <h3 class="post-title"><%= link_to review.title ,review_path(review)%></h3>
                    <p><%= review.about%></p>
                  </div>
                </div>
              <%end%>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>

<script>
  $("#bookmark_button").on("click", function(event) {

});
</script>

<script type="text/javascript">
$("#micropost_image").bind("change", function() {
var size_in_megabytes = this.files[0].size/1024/1024;
if (size_in_megabytes > 5) {
alert("Maximum file size is 5MB. Please choose a smaller file.");
}
});
</script>
