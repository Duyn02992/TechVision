
<div id="post-header" class="page-header">
				<div class="background-img" style="background-image: url('/assets/post-page.jpg');"></div>
				<div class="container">
					<div class="row">
						<div class="col-md-10">
							<div class="post-meta">
								<a class="post-category cat-2" href="category.html"><%= t ".Topic" %></a>
								<span class="post-date"><%= @review.created_at %></span>
							</div>
							<h1><%= @review.title.html_safe %></h1>
						</div>
					</div>
				</div>
			</div>
		<!-- /Header -->

		<!-- section -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<!-- Post content -->
					<div class="col-md-8">
						<div>
							<%= render 'bookmark_form' %>
						</div>
						<div class="section-row sticky-container">
							<div class="main-post">
								<figure class="figure-img">
									<%= link_to image_tag("5030401_cover_Xiaomi_Redmi_10X_tinhte.jpg", class: "img-responsive", alt: "blog-post.html"),"#"%>
								</figure>

								<%= @review.content.html_safe %>
						<!-- /author -->
						<div class="aside-widget">
              <div class="tags-widget">
                <ul>
								<% if !@hashtags.empty? %>
      						<% @hashtags.each do |hashtag| %>
										<li><%=link_to hashtag.name,"#" %></li>
										<% end %>
									<% end %>
								<ul>
							</div>
						</div>
						<div>
							<%= link_to (t ".New Review"), new_review_path, class: "btn btn-primary" %><br>
							<%= link_to (t ".Edit Review"), edit_review_path(@review), class: "btn btn-primary" %><br>
							<%= link_to (t ".Delete"), @review, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger" %><br>
						</div>

						<!-- comments -->
						<div class="section-row">
							<div class="section-title">
								<h2>3 Comments</h2>
							</div>

							<div class="post-comments">

						</div>

<div id="comments">
  <div>
   <h2><%= @review.title %><h2>
  </div>
  <div>
    <%= @review.content %>
  </div>
  <div>
  <%= render "comments/comments" %>
  </div>

</div>
