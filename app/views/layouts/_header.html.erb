<header id="header">
  <div id="nav">
    <div id="nav-fixed">
      <div class="container">
        <div class="nav-logo">
          <%= link_to image_tag("logo2.png", class: "logo", alt: "techvision.html"),root_path%>
        </div>
        <ul class="nav-menu nav navbar-nav">
          <% if !@topics_name.nil? %>
            <% @topics_name.each do |topic|%>
          <li><%= link_to topic.name, topic_path(topic) %></li>
            <% end %>
          <% end %>
        </ul>
        <div class="search col-md-4">
          <%= form_tag(search_page_path, :method => "get") do %>
          <%= search_field_tag :search, params[:search],
                            placeholder: t(:Search, scope: "static_pages.home"),
                                          class: "form-control", id: "myInput"%>
          <% end %>
        </div>
        <div class="nav-btns">
          <li class="dropdown list-style-hd list-style-hd1">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-globe"></span>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
                <li><%= link_to "English", locale:"en" %></li>
                <li><%= link_to "Vietnamese", locale:"vi" %></li>
            </ul>
          </li>
          <li class=" list-style-hd"><button class="aside-btn"><i class="fa fa-bars"></i></button></li>
        </div>
      </div>
    </div>
    <div id="nav-aside">
      <div class="section-row">
        <ul class="nav-aside-menu">
          <% if logged_in? %>
            <li class="nav-li"><%= link_to t("index.Users"), users_path %></li>
            <li class="dropdown nav-li">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t("index.Account") %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li class="nav-li"><%= link_to t("index.Profile"), current_user %></li>
                <li class="nav-li"><%= link_to t("index.Settings"), edit_user_path(current_user) %></li>
                <li class="nav-li">
                  <%= link_to t("index.Log out"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="nav-li"><%= link_to t("index.Log in"), login_path %></li>
          <% end %>
        </ul>
      </div>
      <button class="nav-aside-close"><i class="fa fa-times"></i></button>
    </div>
  </div>
</header>
