<div class="modal fade" id="approvalModal-<%= object.id%>" tabindex="-1" role="dialog" aria-labelledby="approvalModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
      	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
		<%= form_for [:admin, object], :remote => true do |f| %>
	      Name topic: <%= f.text_field :name  %>
	      <%= f.submit value: "update", class: "btn btn-sm btn-primary "%>
	     <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>