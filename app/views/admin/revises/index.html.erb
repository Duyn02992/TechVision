<div class="container py-5 text-white">
  <div class="row">
    <div class="col-md-12 mx-auto">
      <div class="card border-0 shadow">
        <div class="card-body p-5">
          <div class="table-responsive">
            <table class="table m-0">
              <thead>
                <tr>
                  <th class="col-md-1" ><%= t("index.stt") %></th>
                  <th class="col-md-2"><%= t("index.user") %></th>
                  <th class="col-md-4"><%= t("index.Title") %></th>
                  <th class="col-md-2"><%= t("index.Accept_add") %></th>
                  <th class="col-md-1"><%= t("index.Delete") %></th>
                </tr>
              </thead>
              <tbody>
              <% @reviews.each_with_index do |review, index| %>
                <div id =revise-<%= review.id %>>
                <tr>
                  <td><%= index+1%></td>
                  <td><%= link_to review.user.name, user_path(review.user) %></td>
                  <td><%= link_to review.title, review_path(review) %></td>
                  <td><%= link_to edit_admin_revise_path(review),
                    class: "btn btn-success btn-sm rounded-0", type: "button" do %>
                      <i class="fa fa-edit"></i>
                    <% end %>
                  </td>
                  <td><%= link_to admin_revise_path(review), method: :delete,
                    data_delete: { confirm: "You sure?" },
                    class: "destroy-revise btn btn-danger btn-sm rounded-0",
                    type: "button" do %>
                      <i class="fa fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
                </div>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
